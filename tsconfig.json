{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": false,
        "strict": false,
        "lib": ["ES2021"],
        "module": "commonjs",
        "target": "ES2021",
        "moduleResolution": "node",
        "outDir": "dist",
        "baseUrl": ".",
        "sourceMap": true,
        "paths": {
            "@*": ["lib/*", "bin/*"]
        }
    },
    "exclude": ["dist", "node_modules"],
    "include": ["./**/*.ts"]
}
